<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/maintext"
        android:textColor="@color/purple_700"
        android:textColorHighlight="#DC3327"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/chicken"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <ImageButton
        android:id="@+id/chicken"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/gradient1"
        android:contentDescription="@string/card"
        android:scaleType="fitCenter"
        android:src="@drawable/cardbut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slide"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/fishcatch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/eggcatch"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="@drawable/gradient1"
        android:contentDescription="@string/egg"
        android:scaleType="fitCenter"
        android:src="@drawable/eggsbut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <ImageButton
        android:id="@+id/cardch"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="@drawable/gradient1"
        android:contentDescription="@string/chicken"
        android:scaleType="fitCenter"
        android:src="@drawable/chickenbut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide"
        app:layout_constraintVertical_bias="0.18" />

    <ImageButton
        android:id="@+id/fishcatch"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="@drawable/gradient1"
        android:contentDescription="@string/slide"
        android:scaleType="fitCenter"
        android:src="@drawable/slidebut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eggcatch"
        app:layout_constraintVertical_bias="0.18" />

    <ImageButton
        android:id="@+id/slide"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="@drawable/gradient1"
        android:contentDescription="@string/fishing"
        android:scaleType="fitCenter"
        android:src="@drawable/fishingbut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="127dp"
        android:layout_height="114dp"
        android:src="@drawable/sun"
        app:layout_constraintBottom_toTopOf="@+id/slide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="102dp"
        android:layout_height="99dp"
        android:src="@drawable/bmo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/SonoffBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />
</android.support.constraint.ConstraintLayout>